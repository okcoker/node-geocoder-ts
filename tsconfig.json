{
  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "allowJs": true,
      "module": "commonjs",
      "target": "ESNext",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noErrorTruncation": true,
      "noImplicitOverride": true,
      "paths": {
        "lib": ["lib"],
        "test": ["test"],
        "integration_test": ["integration_test"],
        "types": ["types.d.ts"]
      }
  },
  "include": [
      "lib",
      "test",
      "integration_test",
      "index.ts",
      "types.d.ts"
  ]
}
