{

  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "allowJs": true,
      "module": "commonjs",
      "target": "ESNext",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "paths": {
          "lib": ["lib"],
          "test": ["test"],
          "types": ["types.d.ts"],
      }
  },
  "include": [
      "lib",
      "test",
      "index.ts",
      "types.d.ts"
  ]
}
